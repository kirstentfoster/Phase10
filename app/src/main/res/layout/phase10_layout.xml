<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_gui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phase10MainActivity">

    <LinearLayout
        android:id="@+id/overallLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/TopRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/QuitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUIT" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AIDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="85"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/AIDeckCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/cardback" />

            <ImageView
                android:id="@+id/AIDeckCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/cardback" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/AIPhase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="200"
            android:orientation="horizontal">

            <Button
                android:id="@+id/HitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="Hit" />

            <SurfaceView
                android:id="@+id/OpponentPhase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PhaseDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PhaseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:text="Phase 3: \n1 set of 4\n1 run of 4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DrawPiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Discard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/yellow9" />

            <ImageButton
                android:id="@+id/DrawPile"
                android:layout_width="wrap_content"
                android:layout_height="339dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/cardback" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlayerPhase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="200"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/DiscardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discard" />

            <SurfaceView
                android:id="@+id/InvisiblePhase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"/>


            <Button
                android:id="@+id/PlayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="Play Phase" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlayerDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_weight="250"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/PlayerDeck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/green9" />

            <ImageButton
                android:id="@+id/playerDeck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/green9" />

            <ImageButton
                android:id="@+id/PlayerDeck3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/yellow9" />

            <ImageButton
                android:id="@+id/PlayerDeck4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/blue2" />

            <ImageButton
                android:id="@+id/PlayerDeck5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/green5" />

            <ImageButton
                android:id="@+id/PlayerDeck6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/yellow5" />

            <ImageButton
                android:id="@+id/PlayerDeck7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/blue2" />

            <ImageButton
                android:id="@+id/PlayerDeck8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/red8" />

            <ImageButton
                android:id="@+id/PlayerDeck9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/blue7" />

            <ImageButton
                android:id="@+id/PlayerDeck10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/red1" />
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>