<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_gui_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_gui_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/TopRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/QuitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUIT" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AIDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="900"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/AIDeckCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:src="@drawable/cardback" />

            <ImageView
                android:id="@+id/AIDeckCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:src="@drawable/cardback" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/AIPhase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="700"
            android:orientation="horizontal">

            <Button
                android:id="@+id/HitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="Hit" />

            <ImageView
                android:id="@+id/AIPhaseCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/rednine" />

            <ImageView
                android:id="@+id/AIPhaseCard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/yellownine" />

            <ImageView
                android:id="@+id/AIPhaseCard4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/rednine" />

            <ImageView
                android:id="@+id/AIPhaseCard5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:src="@drawable/yellowthree" />

            <ImageView
                android:id="@+id/AIPhaseCard6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/redfour" />

            <ImageView
                android:id="@+id/AIPhaseCard7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/yellowfive" />

            <ImageView
                android:id="@+id/AIPhaseCard8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/yellowsix" />

            <ImageView
                android:id="@+id/AIPhaseCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/greennine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PhaseDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PhaseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:text="Phase 3: \n1 set of 4\n1 run of 4"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DrawPiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3100"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/DiscardPile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/blue2"
                android:tint="@drawable/touch_selector" />

            <ImageButton
                android:id="@+id/DrawPile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/cardback" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlayerPhase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="900"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/DiscardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discard" />

            <ImageView
                android:id="@+id/InvisiblePhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/cardback"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/hitOnMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hit Self" />

                <Button
                    android:id="@+id/PlayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Phase" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlayerDeck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="-600"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/PlayerHand1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/red2" />

            <ImageButton
                android:id="@+id/PlayerHand2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/green9" />

            <ImageButton
                android:id="@+id/PlayerHand3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/green5" />

            <ImageButton
                android:id="@+id/PlayerHand4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow9" />

            <ImageButton
                android:id="@+id/PlayerHand5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/blue12" />

            <ImageButton
                android:id="@+id/PlayerHand6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/green5" />

            <ImageButton
                android:id="@+id/PlayerHand7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/yellow5" />

            <ImageButton
                android:id="@+id/PlayerHand8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow5" />

            <ImageButton
                android:id="@+id/PlayerHand9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/red9" />

            <ImageButton
                android:id="@+id/PlayerHand10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow9" />

            <ImageButton
                android:id="@+id/PlayerHand11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow9" />
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>